<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <!-- favicon -->
        <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
        <link rel="manifest" href="/favicon/site.webmanifest">
        
        <!-- Import CSS Bootstrap -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <!-- Import custom CSS -->
        <link rel="stylesheet" type="text/css" href="/css/style-account.css">
        <link rel="stylesheet" type="text/css" href="/css/style-admin.css">
        <link rel="stylesheet" type="text/css" href="/css/style-navbar.css">
        <title>Strange Day</title>
    </head>
 
    <body>
        <header>
            <%- include('navbar') %>
        </header>

        <main class="pt-5 mt-3">
            <div class="m-3"> 
                <span href="#" class="link-title p-2 pl-4">
                    Ajout d'un article
                </span>
            </div>
            <div class="new-product-content container-fluid px-4">
                <div class="images pb-3">
                    <label class="title my-2"> Image(s) </label>
                    <div class="img-preview d-flex">
                    </div>
                    <label class="btn btn-primary m-0 mt-3" for="files">Ajouter une image</label>
                    <input class="form-control" type="file" id="files" name="images" accept="image/*">
                    <a href="#" class="btn btn-secondary mt-3" id="clear"> Supprimer </a>
                    <div class="invalid-feedback">Veuillez ajouter au moins une image</div>
                </div>
                <div class="d-flex flex-wrap ">
                    <div class="col-md-4 col-12">
                        <div class="name">
                            <label class="title my-2"> Nom </label>
                            <input type="text" placeholder="Nom" class="form-control col" name="name">
                            <div class="invalid-feedback">Veuillez rentrer un nom</div>
                        </div>
                        <div class="description">
                            <label class="title my-2"> Description </label>
                            <textarea class="form-control col" placeholder="Ajouter une description ici ..." rows="10" name="description"></textarea>
                            <div class="invalid-feedback">Veuillez rentrer une description</div>
                        </div>
                    </div>
                    <div class="col-md-4 col-12">
                        <div class="price">
                            <label class="title my-2"> Prix </label>
                            <input type="text" placeholder="12.99" class="form-control col" name="price">
                            <div class="invalid-feedback">Veuillez rentrer un prix valide (ex: 12.99)</div>
                        </div>
                        <div class="weight">
                            <label class="title my-2"> Poids </label>
                            <input type="text" placeholder="250" class="form-control col" name="weight">
                            <div class="invalid-feedback">Veuillez rentrer un poids valide (en milligramme)</div>
                        </div>
                        <div class="available">
                            <label class="title my-2"> Type </label>
                            <br/>
                            <label class="checkbox-inline"><input type="radio" name="type" value="clothe" id="t1" checked > Vêtement </label>
                            <label class="checkbox-inline ml-3"><input type="radio" name="type" value="print" id="t2" %> > Affiche </label>
                            <label class="checkbox-inline ml-3"><input type="radio" name="type" value="accessory" id="t3" %> > Accessoire </label>
                        </div>

                        <div class="type-clothe">
                            <div class="clothe_type">
                                <label class="title my-2"> Type de vêtement </label>
                                <br/>
                                <select class="custom-select" name="clothe_type">
                                    <option selected value="t-shirt" class="attached enabled">T-Shirt</option>
                                    <option value="crewneck" class="attached enabled">Crewneck</option>
                                    <option value="longsleeve" class="attached enabled">Longsleeve</option>
                                </select>
                            </div>
                            <div class="composition">
                                <label class="title my-2"> Composition </label>
                                <input type="text" placeholder="Composition du vêtement" class="form-control col" name="composition">
                            </div>
                            <div class="sizes">
                                <label class="title my-2"> Tailles disponibles </label>
                                <br/>
                                <label class="checkbox-inline"><input type="checkbox" id="size-s" value="1" checked> S </label>
                                <label class="checkbox-inline ml-4"><input type="checkbox" id="size-m" value="1" checked> M </label>
                                <label class="checkbox-inline ml-4"><input type="checkbox" id="size-l" value="1" checked> L </label>
                                <label class="checkbox-inline ml-4"><input type="checkbox" id="size-xl" value="1" checked> XL </label>
                                <label class="checkbox-inline ml-4"><input type="checkbox" id="size-xxl" value="1" checked> 2XL </label>
                            </div>
                        </div>
                        <div class="type-poster hide">
                            <div class="size">
                                <label class="title my-2"> Format </label>
                                <input type="text" placeholder="A3" class="form-control col" name="size">
                            </div>
                            <div class="printing">
                                <label class="title my-2"> Grammage </label>
                                <input type="text" placeholder="250mg" class="form-control col" name="printing">
                                <div class="invalid-feedback">veuillez rentrer un grammage</div>
                            </div>
                        </div>
                        <div class="type-accessory hide">
                            <div class="acc_type">
                                <label class="title my-2"> Type d'accessoire </label>
                                <input type="text" placeholder="Sac" class="form-control col" name="acc_type">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 col-12">
                        <div class="collection">
                            <label class="title my-2"> Collection/Capsule </label>
                            <br/>
                            <select class="custom-select" name="collection">
                                <option selected value="Aucune" class="attached enabled">Aucune</option>
                                <option value="Capsule Photomaton" class="attached enabled">Capsule Photomaton</option>
                                <option value="Capsule Photomaton" class="attached enabled">Capsule Summer Roadtrip</option>
                                <option value="Capsule Insomnie" class="attached enabled">Capsule Insomnie</option>
                            </select>
                        </div>
                        <div class="available">
                            <label class="title my-2"> Disponible </label>
                            <br/>
                            <label class="checkbox-inline"><input type="radio" name="available" value="1" id="a1" checked> Oui </label>
                            <label class="checkbox-inline ml-3"><input type="radio" name="available" value="0" id="a2"> Non </label>
                        </div>
                    </div>
                </div>
                <form class="text-center" action="/admin-add-product" method="post">
                    <button class="btn btn-success my-4" type="submit"> Ajouter le produit </button>
                </form>
            </div>
        </main>
        <footer>
            <%- include('footer') %>
        </footer>
    </body>
    
    <script type="text/javascript">
        var fileTypes = [
          'image/jpeg',
          'image/jpeg',
          'image/png'
        ]

        // (re)créer les events liés au clic de déplacement ou suppression des images
        function moveArray(start, end) {
            let element = file_list[start];
            file_list.splice(start, 1)
            file_list.splice(end, 0, element)
            console.log(file_list)
        }
        function bindImageControl() {
            $( ".image-container a").unbind();
            $('a.carousel-control-prev').click(function () {
                let item = $(this).parent();
                moveArray(item.index(), item.index()-1 <= 0 ? 0 : item.index()-1)
                item.prev().before(item);
            })
            $('a.carousel-control-next').click(function () {
                let item = $(this).parent();
                moveArray(item.index(), item.index()+1)
                item.next().after(item);
            })
            $('a.carousel-control-remove').click(function () {
                let item = $(this).parent();
                file_list.splice(item.index(), 1)
                item.remove();
            })
        }

        // prend un fichier en paramètre et verifie qu'il est bien du type autorisé
        function validFileType(file) {
            for(var i = 0; i < fileTypes.length; i++) {
                if(file.type === fileTypes[i]) {
                    return true;
                }
            }
            return false;
        }

        function addImgPreview (file) {
            let path = window.URL.createObjectURL(file); // on créer un lien provisoire pour l'image
            $('.img-preview').append(`
                <div class="image-container mx-2">
                    <img src="${path}" img-name='${file.name}'></img>
                    <a class="carousel-control-prev" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                    <a class="carousel-control-remove py-1" role="button">
                        <span aria-hidden="true">Supprimer</span>
                    </a>
                </div>`)

            bindImageControl()
        }

        function getImgList() {
            var list = []
            $('.images img').each(function () {
                list.push($(this).attr('img-name'));
            });

            return list
        }

        var file_list = []
        // Actualise le cadre de preview d'images
        $('.images input').change(function () {
            var files = $(this).prop('files');
            file_list.push(files[0]);
            if (files.length) {
                for (var i=0; i<files.length; i++) {
                    if (validFileType(files[i])) {
                        addImgPreview(files[i]);
                    }
                }
            }
        });

        // Efface toutes les images
        $('.images #clear').click(function () {
            $('.images .img-preview').empty()
            file_list = []
        })

        // Change les champs à remplir selon le type
        $('input[name="type"]').change(function () {
            var value = $('input[name="type"]:checked').val();
            if (value=="clothe") {
                $('.type-clothe').removeClass('hide');
                $('.type-poster').addClass('hide');
                $('.type-accessory').addClass('hide');
            }
            else if (value=="print") {
                $('.type-poster').removeClass('hide');
                $('.type-clothe').addClass('hide');
                $('.type-accessory').addClass('hide');
            }
            else if (value=="accessory") {
                $('.type-accessory').removeClass('hide');
                $('.type-clothe').addClass('hide');
                $('.type-poster').addClass('hide');
            }
        }); 

        // Ajouter un produit
        $('form[action="/admin-add-product"]').submit(function () {
            let image = $('input[name="images"]');
            let name = $('input[name="name"]');
            let description = $('textarea[name="description"]');
            let price = $('input[name="price"]');
            let weight = $('input[name="weight"]');
            let type = $('input[name="type"]:checked');
            let clothe_type = $('.custom-select[name="clothe_type"]');
            let composition = $('input[name="composition"]');
            let size = $('input[name="size"]');
            let printing = $('input[name="printing"]');
            let acc_type = $('input[name="acc_type"]');
            let collection = $('.custom-select[name="collection"]');
            let available = $('input[name="available"]:checked');

            let regexPrice  = new RegExp("^(\\d+[.]\\d{1,2})$");
            let regexWeight = new RegExp("^(\\d+)$");

            if (type.val() == "clothe") {
                size.val('');
                printing.val('');
                acc_type.val('');
            } else if (type.val() == "print") {
                composition.val('');
                acc_type.val('');
            }
            else if (type.val() == "accessory") {
                composition.val('');
                size.val('');
                printing.val('');
            }

            // On check les erreurs et on ajoute la classe en consequant
            if (!file_list.length) {
                image.removeClass('is-valid').addClass('is-invalid');
                return false;
            } else {
                image.removeClass('is-invalid').addClass('is-valid');
            }
            if (!name.val()) {
                name.removeClass('is-valid').addClass('is-invalid');
                return false;
            } else {
                name.removeClass('is-invalid').addClass('is-valid');
            }
            if (!description.val()) {
                description.removeClass('is-valid').addClass('is-invalid');
                return false;
            } else {
                description.removeClass('is-invalid').addClass('is-valid');
            }
            if (!price.val()) {
                price.removeClass('is-valid').addClass('is-invalid');
                return false;
            } else if (!price.val().match(regexPrice)) {
                price.removeClass('is-valid').addClass('is-invalid');
                return false;
            } else {
                price.removeClass('is-invalid').addClass('is-valid');
            }
            if (!weight.val()) {
                weight.removeClass('is-valid').addClass('is-invalid');
                return false;
            } else if (!weight.val().match(regexWeight)) {
                weight.removeClass('is-valid').addClass('is-invalid');
                return false;
            } else {
                weight.removeClass('is-invalid').addClass('is-valid');
            }
            if (!composition.val() && type.val() == "clothe") {
                composition.removeClass('is-valid').addClass('is-invalid');
                return false;
            } else {
                composition.removeClass('is-invalid').addClass('is-valid');
            }
            if (!size.val() && type.val() == "print") {
                size.removeClass('is-valid').addClass('is-invalid');
                return false;
            }
            else {
                size.removeClass('is-invalid').addClass('is-valid');
            }
            if (!printing.val() && type == "print") {
                printing.removeClass('is-valid').addClass('is-invalid');
                return false;
            }
            else {
                printing.removeClass('is-invalid').addClass('is-valid');
            }
            if (!acc_type.val() && type.val() == "accessory") {
                acc_type.removeClass('is-valid').addClass('is-invalid');
                return false;
            }
            else {
                acc_type.removeClass('is-invalid').addClass('is-valid');
            }

            //uploadImgFiles(file_list) // On upload les images sur le serveur en parallèle
            var form = new FormData();
            for (file of file_list) {
                form.append('file', file)
            }

            // On upload les images sur le serveur
            $.ajax({
                type: 'POST',
                url: '/upload-img', 
                // Form data
                enctype: 'multipart/form-data',
                data: form,//form,

                // Tell jQuery not to process data or worry about content-type
                // You *must* include these options!
                cache: false,
                contentType: false,
                processData: false,                
            })
            .done( function (data) {
                // ... Et on attend que l'upload soit fini pour lancer la 2e requête
                $.post("/admin-add-product", {
                    images: JSON.stringify(getImgList()),
                    name: name.val(),
                    description: description.val(),
                    price: price.val(),
                    weight: weight.val(),
                    clothe_type: clothe_type.val(),
                    composition: composition.val(),
                    s:   $('input#size-s:checked').val(),
                    m:   $('input#size-m:checked').val(),
                    l:   $('input#size-l:checked').val(),
                    xl:  $('input#size-xl:checked').val(),
                    xxl: $('input#size-xxl:checked').val(),
                    size: size.val(),
                    printing: printing.val(),
                    acc_type: acc_type.val(),
                    collection: collection.val(),
                    type: type.val(),
                    available: available.val()
                })
                .done( function (data) {
                    if (data == "badInfos") {
                    }
                    else {
                        location.assign('/admin-products-list');
                    }
                });    
            });
            return false; // on execute pas le submit normal
        });

    </script>

</html>