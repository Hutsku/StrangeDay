<div class="mb-5"> 
	<span href="#" class="link-title p-2 pl-4">
		Historique des commandes
	</span>
</div>

<div class="table-order text-center">
	<table class="table table-striped">
		<thead>
			<tr>
				<th class="p-1" scope="col">Commande</th>
				<th class="p-1" scope="col">Montant</th>
				<th class="p-1" scope="col">Statut</th>
				<th class="p-1" scope="col">Date</th>
				<th class="p-1" scope="col">Payement</th>
			</tr>
		</thead>
		<tbody>
			<% for (order of orders) { 
				switch (order.state) {
                    case "waiting":
                        var color = "orange";
                        var text = "En attente";
                        break;
                    case "confirmed":
                        var color = "green";
                        var text = "En préparation";
                        break;
                    case "shipped":
                        var color = "blue";
                        var text = "Envoyée";
                        break;
                } %>
				<tr>
					<td><a href="/order-detail/<%= order.id %>">n° <%= order.id %></a></td>
					<td><%= order.total_cost %>€</td>
					<td style="color: <%= color %>;"><%= text %></td>
					<td><%= order.date.getDate() %>/<%=order.date.getMonth()+1%>/<%= order.date.getFullYear() %></td>
					<td><%= order.payment_method %></td>
				</tr>
			<% } %>

		</tbody>
	</table>
</div>

