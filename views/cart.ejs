                let ship = session.cart.shipping_cost+'€';
                let vouch = session.cart.voucher_promo ? session.cart.voucher_promo+'%':0;
                let tot = session.cart.total_cost+'€';
                if (!parseInt(ship)) {
                    ship = 'Gratuite';
                    tot = subtot;
                }
                if (!session.cart.products.length) { 
                    subtot = "-";
                    ship = "-";
