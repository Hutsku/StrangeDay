    				<div class="cart-pannel-main container">
                        <span class="title row mb-4"> Contenu du panier </span>
                        <% for (product of session.cart.products) {  %>
                            <div class="cart-product row align-items-center" product_id="<%= product.id %>" product_option="<%= product.option %>" product_color="<%= product.color %>" product_available="<%= product.available %>" product_weight="<%= product.weight %>">
                            	<div class="cart-product-img p-2 col-3">
                            		<img class="w-100" src="/img/<%= product.image %>">
                            	</div>
                            	<div class="cart-product-name col-md-5 col" product_name='<%- product.name %>'>
                            		<a href="/product/<%= product.id %>"><%- product.name %> <%- product.color == "Défaut" ? '' : product.color %> <%- product.option %></a>
                            	</div>
                            	<div class="w-100 d-md-none d-block"></div>
                            	<div class="cart-product-qty col-md-2 offset-md-0 offset-3 col-4">
                            		<input type="number" value="<%= product.cart_qty %>" min="1" max="99" step="1"/>
                            	</div>
                            	<div class="cart-product-price col-md-1 col-3" product_price="<%= product.price %>">
                            		<span><%= parseFloat((product.price * product.cart_qty).toFixed(10)) %>€</span>
                            	</div>
                            	<div class="product-remove col-md-1 col-1">
                                <form class="form-remove-cart col-1" action="/remove-cart" method="post" product_id="<%= product.id %>" product_option="<%= product.option %>" product_color="<%= product.color %>">
                            		<button type="submit" class="close" aria-label="Close">
                                    	<span aria-hidden="true">&times;</span>
                                	</button>
                                </form>
                            	</div>     
                            </div>
                            <div class="w-100 border-bottom my-3"></div>
                        <% } 
                        if (session.cart.products.length) { %>
                            <form action="/valid-cart" method="post" class="mt-5 text-center">
                                <button class="w-auto btn btn-log mb-3 payout-button" type="submit" name="valid-cart">
                                    Valider le panier
                                </button>
                            </form>
                        <% } else { %>
                            <div class="cart-empty text-center row"> 
                                <span class="col my-5">Aucun produit dans le panier ...</span>
                            </div>
                        <% } %>
              		</div>
    			</div>
    			
